{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["esnext"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./public",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  // "files": ["src/type.d.ts"],
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
