      <div class="col-10">
        <div class="row ">
            <div  class="col-6">
                <label>Name</label>
                <br/>
                <input  class="form-control" id="ip-name" onchange="handleOnChangeName(true,true)" />
            </div>
          
            <div class="col-6">
                <label>Slug</label>
                <br/>
                <input  class="form-control" id="ip-slug" onchange="handleOnChangeSlug(true,true)" />
                <p class="mt-1" >Hint: <span id="ip-hint"></span></p>
            </div>
     </div>
