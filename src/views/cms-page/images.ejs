
<div class="">
  <div class="ml-4 mt-2">
    <%if(type=='general') { %>
      <a href="/cms/images/general" class="btn btn-warning mr-2" >General</a>
      <a href="/cms/images/post" class="btn btn-primary mr-2" >Post</a>
      <a href="/cms/images/product" class="btn btn-primary mr-2" >Product</a>
    <%} else if(type=='post'){%>
      <a href="/cms/images/general" class="btn btn-primary mr-2" >General</a>
      <a href="/cms/images/post" class="btn btn-warning mr-2" >Post</a>
      <a href="/cms/images/product" class="btn btn-primary mr-2" >Product</a>
      <%} else if(type=='product'){%>
        <a href="/cms/images/general" class="btn btn-primary mr-2" >General</a>
        <a href="/cms/images/post" class="btn btn-primary mr-2" >Post</a>
        <a href="/cms/images/product" class="btn btn-warning mr-2" >Product</a>
      <%} %>

  </div>
  <br/>
  <br/>
  <br/>
  
  <form class="d-flex justify-content-center"   method="post" enctype="multipart/form-data">
    <input class="form-control input-form-control input-upload"    name="file" type="file" multiple />
  </form>
  <div class="d-flex justify-content-center">
    <a type-image="<%=type%>"  class="btn btn-success mt-2 btn-link">Upload</a>
  </div>
  <br/>
  <br/>
  <br/>
  <div class="d-flex">
    <a class="btn btn-danger ml-4 btn-delete"  >Delete</a>
    <a class="btn btn-warning ml-2 btn-check-all" >Check all</a>
  </div>
  <div class="d-flex flex-wrap ml-4 mr-2 mt-3" id="list-image">
    <% if (typeof arrayImage !== 'undefined' && arrayImage.length > 0) { %>
        <% arrayImage.forEach(function(item) { %>
          <div class="wrap-image mr-1 mt-1" >
            <img  src="<%=item.url%>" class="image-upload"  />
            <input id-item="<%=item.id%>" type="checkbox" id="ip-checkbox" />
          </div>
        <% }); %>
      <%}%>
  </div>
</div>