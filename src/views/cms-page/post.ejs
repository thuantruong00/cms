<div class="d-flex justify-content-center mt-5">
    <table class="table col-10">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Slug</th>
            <th scope="col">Active</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% for( const item of arrayCategoriesOnPosts) { %>
          <tr id="row-id-<%=item.post_id%>">
            <th scope="row"><%=item.post_id%></th>
            <td id="title-id-<%=item.post_id%>"><%=item.title%></td>
            <td id="name-id-<%=item.post_id%>"><%=item.name%></td>
            <td id="slug-id-<%=item.post_id%>"><%=item.slug%></td>
            <td id="status-id-<%=item.post_id%>"><%=item.status%></td>
            <td>
                <a class="btn btn-success" href="/cms/post/<%=item.post_id%>/<%=item.post_category_id%>">Edit</a>
                <a class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">Delete</a>
            </td>
          </tr>
          <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="confirmModalLabel">Confirm action</h5>
                  <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Do you want delete this category?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-danger" onclick="handleDeletePost(`<%=item.post_id%>`,`<%=item.post_category_id%>`)">Delete</button>
                </div>
              </div>
            </div>
          </div>
          <%}%>
        </tbody>
      </table>
</div>
