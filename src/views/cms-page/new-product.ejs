<div class="container d-flex justify-content-center mt-5">
    <div class="">
      <div class="col-12">
        <div class="row">
          <div class="col-6">
            <label>Name</label>
            <br />
            <input class="form-control" id="ip-name" onchange="handleOnChangePostName(false)" />
          </div>
          <div class="col-6">
            <label>Slug</label>
            <br />
            <input class="form-control" id="ip-slug" />
          </div>
        </div>
       
        <div class="mt-3">
          <label>Description</label>
          <br />
          <div id="editor" class="mt-3"></div>
          <script>
            ClassicEditor.create(document.querySelector('#editor'), {
            })
              .then((editor) => {
                editorExcerpt = editor;
              })
              .catch((error) => {
                console.error(error);
              });
          </script>
        </div>
        <div class="mt-3">
          <label>Detail</label>
          <br />
          <div id="editor1" class="mt-3"></div>
          <script>
            ClassicEditor.create(document.querySelector('#editor1'))
              .then((editor) => {
                editorContent = editor;
              })
              .catch((error) => {
                console.error(error);
              });
          </script>
        </div>
        <div class="mt-3 row">
            <div class="col-6">
                <label>Price</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
            <div class="col-6">
                <label>Active</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
        </div>

        <div class="mt-3 row">
            <div class="col-6">
                <label>Stock status</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
            <div class="col-6">
                <label>Stock quantity</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
        </div>

        <div class="mt-3 row">
            <div class="col-6">
                <label>Order</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
            <div class="col-6">
                <label>Unit</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
        </div>

        <div class="mt-3 row">
            <div class="col-6">
                <label>Sale off</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
            <div class="col-6">
                <label>Sale price</label>
                <div class="input-group mb-3 ">
                    <input type="number" class="form-control" min="1" step="10000">
                    <div class="input-group-append">
                      <span class="input-group-text">VND</span>
                    </div>
                  </div>
            </div>
        </div>

        <div class="mt-3">
            <label>Label</label>
            <br />
            <div id="editor2" class="mt-3"></div>
            <script>
              ClassicEditor.create(document.querySelector('#editor2'))
                .then((editor) => {
                  editor = editor;
                })
                .catch((error) => {
                  console.error(error);
                });
            </script>
          </div>

        <div class="mt-3">
          <label>Image post:</label>
          <img id="image-post" src="/cms/images/index/default-image.jpeg" class="image-show ml-2 mr-2" />
          <a class="btn btn-success" onclick="handleOpenModalPost()">Choose</a>
           
        </div>
        <div class="mt-3">
          <label>Active: </label>
          <input id="active-checked" type="checkbox" checked />
        </div>
        <div class="d-flex justify-content-center">
          <button type="button" class="btn btn-success mt-3" onclick="handleCreateNewPost()">Submit</button>
        </div>
      </div>
    </div>
    <div class="wrap-modal d-none" >
      <div class="modal-upload"  >
          <%const typeUpload = 'product'%>
          <%- include('../partials/cms/view-image.ejs', {arrayImage,typeUpload}) %>
      </div> 
  </div>
  </div>
  
  